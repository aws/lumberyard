SUBFOLDERS = [
    'GridMate'
    ]

import os.path

def build(bld):
    bld.recurse('Tests')

    kw = dict(
        # Settings
        target          = 'GridMate',
        vs_filter       = 'Network',
        file_list       = ['GridMate/gridmate.waf_files', 'GridMate/gridmate_ssl.waf_files'],
        platforms       = ['all'],
        configurations  = ['all'],
        disable_pch     = True,
        includes        = ['.'],
        use             = ['AzCore'],
        uselib          = ['OPENSSL'],
        export_includes = ['.'],
        clang_cxxflags  = ['-Wno-deprecated-declarations'],


        # Compiler Specific
        msvc_cxxflags   = [
                           '/W4', # warning level
                          ],

        # Platform Specific
        win_features                = ['crcfix'],

        restricted_script = 'update_restricted_parameters',

        darwin_enable_rtti          = True,
    )
    for p0, p1, p2, p3 in bld.env['RESTRICTED_PLATFORMS']:
        kw['{}_file_list'.format(p3)] = ['GridMate/{0}/gridmate_{1}.waf_files'.format(p0, p1)]
    bld.CryEngineStaticLibrary(**kw)
