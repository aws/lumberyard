def build(bld):

    bld.CryLauncher(
        target                      = 'WindowsLauncher',
        platforms                   = ['win'],
        client_only                 = True,
        file_list                   = 'launcher.waf_files',
        includes                    = [bld.Path('Code/Launcher')],

        lib                         = 'Shell32', 
        additional_manifests        = 'DPIAware.xml',

        use                         = ['AzGameFramework'],
        uselib                      = ['DBG_HELP',
                                       'D3D_COMPILER_47'],

    )
