float Script : STANDARDSGLOBAL
<
  string Script =
           "NoPreview;"
           "ShaderDrawType = Light;"
           "ShaderType = Particle;"
>;

sampler2D diffuseSamplerAniso = sampler_state
{
  Texture = $FromObj;
  MinFilter = ANISOTROPIC;
  MagFilter = ANISOTROPIC;
  MipFilter = ANISOTROPIC;
  AnisotropyLevel = 16;
  sRGBLookup = true;
};

sampler2D diffuseSampler = sampler_state
{
  Texture = $FromObj;
  MinFilter = LINEAR;
  MagFilter = LINEAR;
  MipFilter = LINEAR;
  sRGBLookup = true;
};

samplerCUBE diffuseCMSampler = sampler_state
{
  Texture = $FromRE0;
  AddressU = Clamp;
  AddressV = Clamp;
  MinFilter = POINT;
  MagFilter = POINT;
  MipFilter = NONE;
};

#define %GLOW_MAP
sampler2D glowMapSampler = sampler_state
{
  Texture = $FromObjGlow;
  AddressU = Border;
  AddressV = Border;
  BorderColor = {0, 0, 0, 0};
  MinFilter = LINEAR;
  MagFilter = LINEAR;
  MipFilter = LINEAR;
  sRGBLookup = true;
};

half4 FromObjSB[2] : PB_FromObjSB;


#include "Particles.cfi"
